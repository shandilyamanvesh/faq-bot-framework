%h3 Edit User

= simple_form_for([:admin, @user], html: { class: 'form-horizontal' }) do |form|
  = form.input :email
  = form.input :password, hint: "Leave blank to keep the existing password"
  = form.input :password_confirmation
  = form.input :role, collection: User::ROLES.map{|u| [u.to_s.titleize, u]}, include_blank: true if current_user.role == "admin"
  = form.association :knowledge_bases, input_html: { class: "select2" } if current_user.role == "admin"
  = form.submit "Save", class: "btn btn-primary"
  = link_to "Cancel", current_user.role == "admin" ? admin_users_path : root_url, class: "btn"

  
  - if can? :destroy, @user
    .pull-right

      = link_to "", admin_user_path(@user), method: :delete, class: "fa fa-trash fa-2x", data: { confirm: "You are about to delete this user account. Are you sure?" }

  - if can? :send_password_link, @user
    .pull-right
      = link_to "Send password link", admin_user_send_reset_password_instructions_path(@user), method: :post, class: "btn"