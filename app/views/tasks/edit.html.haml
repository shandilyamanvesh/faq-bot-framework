.contain
    %h3 Edit Task

    = simple_form_for @task ,html: { class: 'form-horizontal' ,:autocomplete => "off"} do |f|
        = f.input :name, required: false
        = f.input :code
        .card.mb-3
            .card-header
                Properties(Json)
            .card-body
                = f.input :properties
        = f.submit "Save", class: "btn btn-primary"
        - unless @task.new_record?
            .float-right
                = link_to "", task_path(@task), method: :delete, class: "fa fa-trash fa-2x", data: { confirm: "are yor sure you want to delete this"}